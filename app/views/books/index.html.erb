<h1>Bookshelf</h1>
<a href="<%= url_for(controller: 'books', action: 'new')%>">New Book</a>
<% @books.each do |book| %>
<div class="card mb-3" style="max-width: 400px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="<%= book.image_url %>" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= book.title %></h5>
        <p class="card-text"><%= book.author%></p>
        <p class="card-text"><small class="text-muted"><%= link_to "More Info", book %></small></p>
      </div>
    </div>
  </div>
</div>
<% end %>