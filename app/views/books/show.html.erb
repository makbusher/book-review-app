

<div class="row">
  <div class="col-md-4">
    <img src="<%= @book.image_url %>" width=80%, height= 80%>
  </div>
  <div class="col-md-8">
    <div class="book-info">
      <h2 class="book-title"><%= @book.title %></h2>
      <h3 class="book-author"><span>From</span> <%= @book.author %></h3>
      <p class="book-desc"><%= @book.summary %></p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="reviews">
      <h2>Reviews: </h2>
      <% if @book.reviews.empty? %>
        <p>No reviews currently.</p>
      <% else %>
        <p><%= render @book.reviews %></p>
      <%end%>
    </div>
  </div>
</div>

<a type="button" class="btn btn-outline-dark" href="/books/<%= @book.id %>/reviews/new">Leave a Review</a>
<a type="button" class="btn btn-outline-dark" href="/books">Back to Bookshelf</a>
